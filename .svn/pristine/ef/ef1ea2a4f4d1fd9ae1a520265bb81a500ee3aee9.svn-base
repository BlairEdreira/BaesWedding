//------------------------------------------------GLOBALS------------------------------------------------
$color_lightgrey: #d3d3d3;
$color_grey: #494E6B;
$color_brown: #98878F;
$color_red: #985E6D;
$color_blue: #192231;
$color_white: #fff;


//------------------------------------------------RSVP------------------------------------------------
.rsvp_answer {
    color: $color_blue;
    border: 1px solid $color_lightgrey;
    padding: 12px 17px;

    &.active {
        color: $color_white;
        border: 0px solid $color_blue;
        background-color: $color_blue;
    }

    &:hover {
        cursor: pointer;
    }
}

.rsvp_container {
    label {
        font-weight: 600;
    }

    .response_header {
        color: $color_grey;
    }

    .error {
        font-size: 12px;
        color: darkred;
    }
}

.rsvp_submit {
    input {
        width: 100%;
        padding: 20px;
    }
}


//------------------------------------------------ADMIN------------------------------------------------

.guest_card {

    .card-header {
        background-color: $color_white;
        border: 2px solid $color_grey;
        border-bottom: 1px solid $color_grey;
    }

    .card-footer {
        background-color: $color_grey;
        color: $color_white;
        border: 2px solid $color_grey;
        border-top: 0;
    }

    .card-block {
        border: 2px solid $color_grey;
        border-top: 0;
        border-bottom: 0;
    }
}
.admin_guest_container {
    .sub_guest {
        .details {
            margin: 0;
            padding: 5px 0;
        }

        h6 {
            color: white;
            background-color: $color_lightgrey;
            margin: 0;
            padding: 10px 0;
        }

        .details_container {
            border: 1px solid $color_lightgrey;
        }
    }
}
.guest_section h3 {
    background-color: $color_lightgrey;
    padding: 50px 0;
}
.header_card {
    .card-header {
        background-color: $color_blue;
        color: white;
    }
}
