//------------------------------------------------GLOBALS------------------------------------------------
$color_lightgrey: #d3d3d3;
$color_grey: #494E6B;
$color_brown: #98878F;
$color_red: #985E6D;
$color_blue: #192231;
$color_white: #fff;
body {
    /*font-family: 'Kalam', cursive;*/
    font-family: 'Dancing Script', cursive;
    overflow-x: hidden;
}
.spacer{
    height: 150px;
}
img {
    /*max-width: 100%;*/

}
//------------------------------------------------NAV------------------------------------------------
.navbar{
    border-bottom: 1px solid black;
    background-color: $color_white;
    height: 150px;
    .countdown{
        display: none;
    }

}
//------------------------------------------------RSVP------------------------------------------------
.btn_rsvp {
    position: absolute;
    top: 50px;

}
.rsvp_answer {
    color: $color_blue;
    border: 1px solid $color_lightgrey;
    padding: 12px 17px;

    &.active {
        color: $color_white;
        border: 0px solid $color_blue;
        background-color: $color_blue;
    }

    &:hover {
        cursor: pointer;
    }
}

.rsvp_container {
    label {
        font-weight: 600;
    }

    .response_header {
        color: $color_grey;
    }

    .error {
        font-size: 12px;
        color: darkred;
    }
}

.rsvp_submit {
    input {
        width: 100%;
        padding: 20px;
    }
}


//------------------------------------------------ADMIN------------------------------------------------

.guest_card {

    .card-header {
        background-color: $color_white;
        border: 2px solid $color_grey;
        border-bottom: 1px solid $color_grey;
    }

    .card-footer {
        background-color: $color_grey;
        color: $color_white;
        border: 2px solid $color_grey;
        border-top: 0;
    }

    .card-block {
        border: 2px solid $color_grey;
        border-top: 0;
        border-bottom: 0;
    }
}
.admin_guest_container {
    .sub_guest {
        .details {
            margin: 0;
            padding: 5px 0;
        }

        h6 {
            color: white;
            background-color: $color_lightgrey;
            margin: 0;
            padding: 10px 0;
        }

        .details_container {
            border: 1px solid $color_lightgrey;
        }
    }
}
.guest_section h3 {
    background-color: $color_lightgrey;
    padding: 50px 0;
}
.header_card {
    .card-header {
        background-color: $color_blue;
        color: white;
    }
}



//------------------------------------------------RSVP BTN------------------------------------------------

.enter-button {
    cursor: pointer;
    margin: 0 auto;
    transition-delay: 1s;
    transition: 500ms;
    padding: .7em calc(.7em*1.2);
    display: inline-block;
    border: 3px solid transparent;
    position: relative;
    font-size: 1.5em;
    letter-spacing: .07em;
}

.enter-button .btn-mitzi {
    transition: 1.5s;
    margin-bottom: 0;
}

.enter-button .text {
    transform: translate3d(0, .7em, 0);
    display: block;
    transition: transform .4s cubic-bezier(.2, 0, 0, 1) .4s;
}

.enter-button:after {
    position: absolute;
    content: '';
    bottom: -3px;
    left: calc(.7em*1.2);
    right: calc(.7em*1.2);
    height: 3px;
    background: #ee2f78;
    z-index: -1;
    transition: transform .8s cubic-bezier(1, 0, .37, 1) .2s, right .2s cubic-bezier(.04, .48, 0, 1) .6s, left .4s cubic-bezier(.04, .48, 0, 1) .6s;
    transform-origin: left;
}

.line {
    position: absolute;
    background: #ee2f78;
}

.line.-right,
.line.-left {
    width: 3px;
    bottom: -3px;
    top: -3px;
    transform: scale3d(1, 0, 1);
}

.line.-top,
.line.-bottom {
    height: 3px;
    left: -3px;
    right: -3px;
    transform: scale3d(0, 1, 1);
}

.line.-right {
    right: -3px;
    transition: transform .1s cubic-bezier(1, 0, .65, 1.01) .23s;
    transform-origin: top;
}

.line.-top {
    top: -3px;
    transition: transform .08s linear .43s;
    transform-origin: left;
}

.line.-left {
    left: -3px;
    transition: transform .08s linear .51s;
    transform-origin: bottom;
}

.line.-bottom {
    bottom: -3px;
    transition: transform .3s cubic-bezier(1, 0, .65, 1.01);
    transform-origin: right;
}

.enter-button:hover .btn-mitzi,
.enter-button:active .btn-mitzi {
    color: #ee2f78;
}

.enter-button:hover .text,
.enter-button:active .text {
    transform: translate3d(0, 0, 0);
    transition: transform .6s cubic-bezier(.2, 0, 0, 1) .4s;
}

.enter-button:hover:after,
.enter-button:active:after {
    transform: scale3d(0, 1, 1);
    right: -3px;
    left: -3px;
    transform-origin: right;
    background: #ee2f78;
    transition: transform .2s cubic-bezier(1, 0, .65, 1.01) .17s, right .2s cubic-bezier(1, 0, .65, 1.01), left 0s .3s;
}

.enter-button:hover .line,
.enter-button:active .line {
    transform: scale3d(1, 1, 1);
    background: #ee2f78;
}

.enter-button:hover .line.-right,
.enter-button:active .line.-right {
    transition: transform .1s cubic-bezier(1, 0, .65, 1.01) .2s;
    transform-origin: bottom;
}

.enter-button:hover .line.-top,
.enter-button:active .line.-top {
    transition: transform .08s linear .4s;
    transform-origin: right;
}

.enter-button:hover .line.-left,
.enter-button:active .line.-left {
    transition: transform .08s linear .48s;
    transform-origin: top;
}

.enter-button:hover .line.-bottom,
.enter-button:active .line.-bottom {
    transition: transform .5s cubic-bezier(0, .53, .29, 1) .56s;
    transform-origin: left;
}

#modal-loader {
    position: absolute;
    left: 50%;
    transform: translateX(-100px);
    z-index: 0;
}

@keyframes lds-ripple {
    0% {
        top: 96px;
        left: 96px;
        width: 0;
        height: 0;
        opacity: 1;
    }

    100% {
        top: 18px;
        left: 18px;
        width: 156px;
        height: 156px;
        opacity: 0;
    }
}

@-webkit-keyframes lds-ripple {
    0% {
        top: 96px;
        left: 96px;
        width: 0;
        height: 0;
        opacity: 1;
    }

    100% {
        top: 18px;
        left: 18px;
        width: 156px;
        height: 156px;
        opacity: 0;
    }
}

.lds-ripple {
    position: relative;
}

.lds-ripple div {
    box-sizing: content-box;
    position: absolute;
    border-width: 4px;
    border-style: solid;
    opacity: 1;
    border-radius: 50%;
    -webkit-animation: lds-ripple 1s cubic-bezier(0, .2, .8, 1) infinite;
    animation: lds-ripple 1s cubic-bezier(0, .2, .8, 1) infinite;
}

.lds-ripple div:nth-child(1) {
    border-color: #ee2f78;
}

.lds-ripple div:nth-child(2) {
    border-color: #2c4ba0;
    -webkit-animation-delay: -.5s;
    animation-delay: -.5s;
}

.lds-ripple {
    width: 200px !important;
    height: 200px !important;
    -webkit-transform: translate(-100px, -100px) scale(1) translate(100px, 100px);
    transform: translate(-100px, -100px) scale(1) translate(100px, 100px);
}
