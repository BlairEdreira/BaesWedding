$(document).ready(function () {
    // going not going
    $('.rsvp_container').hide();
    $('.rsvp_answer').click(function () {
        $('.rsvp_answer').removeClass('active');
        $(this).addClass('active');
        $('.rsvp_submit').show();
        var content = $(this).data('content');
        if (content === 'rsvp_going') {
            $('#rsvp_yes').fadeIn(750);
            $('#rsvp_no').fadeOut(0);
            $('#rsvp_YESorNO').val('true');
        } else {
            $('#rsvp_no').fadeIn(750);
            $('#rsvp_yes').fadeOut(0);
            $('#rsvp_YESorNO').val('false');
        }
    });
    // guest number select
    $('#guest_select').change(function () {
        var count = $(this).val();
        var htmlContent = "";
        for (var i = 0; i < count; i++) {
            htmlContent = htmlContent
                + '<div class="col-lg-12">'
                + '<h6>Guest ' + (i + 1) + '</h6>'
                + '</div>'
                + '<div class="col-6">'
                + '<div class="form-group">'
                + '<label for="response_fname">*First Name</label>'
                + '<input type="text" class="form-control" id="response_guest_' + (i + 1) + '_fname" name="response_guest_' + (i + 1) + '_fname" required>'
                + '</div>'
                + '</div>'
                + '<div class="col-6">'
                + '<div class="form-group">'
                + '<label for="response_lname">*Last Name</label>'
                + '<input type="text" class="form-control" id="response_guest_' + (i + 1) + '_lname" name="response_guest_' + (i + 1) + '_lname" required>'
                + '</div>'
                + '</div>';

        }
        $('#guest_container').html(htmlContent);
    });


    $("#submit_rsvp").click(function () {
        alert('clicked');
        $.ajax({
            type: "POST",
            url: 'Shared/AddGuest',
            dataType: "HTML",
            data: {
                LastName: $('#LastName').val(),
                FirstName: $('#FirstName').val(),
                Email: $('#Email').val(),
                Comment: $('#Comment').val(),
                Guest_1_Fname: $('#Guest_1_Fname').val(),
                Guest_1_Lname: $('#Guest_1_Lname').val(),
                Guest_2_Fname: $('#Guest_2_Fname').val(),
                Guest_2_Lname: $('#Guest_2_Lname').val(),
                Guest_3_Fname: $('#Guest_3_Fname').val(),
                Guest_3_Lname: $('#Guest_3_Lname').val(),
                Guest_4_Fname: $('#Guest_4_Fname').val(),
                Guest_4_Lname: $('#Guest_4_Lname').val(),
                Guest_5_Fname: $('#Guest_5_Fname').val(),
                Guest_5_Lname: $('#Guest_5_Lname').val(),
                Guest_6_Fname: $('#Guest_6_Fname').val(),
                Guest_6_Lname: $('#Guest_6_Lname').val(),
                Guest_7_Fname: $('#Guest_7_Fname').val(),
                Guest_8_Fname: $('#Guest_8_Fname').val(),
                Guest_8_Lname: $('#Guest_8_Lname').val(),
                Guest_9_Fname: $('#Guest_9_Fname').val(),
                Guest_9_Lname: $('#Guest_9_Lname').val(),
                Guest_10_Fname: $('#Guest_10_Fname').val(),
                Guest_10_Lname: $('#Guest_10_Lname').val(),
                Attending: "true"
            }

        });
    });

 
});

